		<result column="note" property="note" />
	</resultMap>

	<select id="selectAllMainPlanList" resultMap="mainplanResult">
		<![CDATA[SELECT * from pmm_pm_mps]]>
	</select>
 	<delete id="deleteMps">
		delete from pmm_pm_mps where sequence = #{sequence}
	</delete>
	<select id="selectAllMpsosList" resultMap="MpsOSResult">
		<![CDATA[SELECT * from pmm_pm_mps_os]]>
	</select>
	<update id="modifyMps" parameterType="MainPlanVO">
		<![CDATA[
		update pmm_pm_mps
		set plandate=#{plandate},plan_quantity=#{plan_quantity}
			where item_Code = #{item_Code}]]>  
	</update>

